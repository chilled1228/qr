{
  "buildCommand": "npm run build",
  "outputDirectory": ".next",
  "installCommand": "npm ci --prefer-offline --no-audit --progress=false",
  "framework": "nextjs",
  "functions": {
    "app/**/*.{js,ts,tsx}": {
      "maxDuration": 30
    }
  },
  "build": {
    "env": {
      "NODE_OPTIONS": "--max-old-space-size=4096"
    }
  }
}
